{
  "extends": "airbnb",
  "rules": {
    "no-unused-vars": "warn",
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "jsx-quotes": ["warn", "prefer-single"],
    "react/jsx-curly-spacing": "always",
    "react/prefer-stateless-function": 1,
    "max-len": [
      "warn",
      {
        "code": 120,
        "ignoreStrings": true,
        "ignoreComments": true
      }
    ]
  },
  "env": {
    "node": true,
    "mocha": true,
    "browser": true,
    "jest": true
  }
}